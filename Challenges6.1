html {
  background-color: whitesmoke;
}
body {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: Arial, Helvetica, sans-serif;
  border: solid 5px pink;
}
header {
  display: flex;
  font-size: 15px;
  font-weight: 900;
}
h1 {
  height: 100px;
  display: flex;
  align-items: center;
}
.exit {
  position: absolute;
  top: 40px;
  left: 50px;
}
.main {
  display: flex;
  justify-content: center;
  margin-left: 50px;
}
.main__image {
  width: 100px;
  height: 100px;
  border: solid 2px blue;
  border-radius: 25px;
  float: left;
  margin-right: 20px;
}
.main__text-1 {
  font-size: 20px;
  font-weight: 900;
}
.main__text-2 {
  position: relative;
  top: 35px;
  right: 56px;
  font-size: 15px;
  font-weight: 600;
}
.plp {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 300px;
  height: 100px;
}
.play {
  width: 130px;
  height: 50px;
  background-color: white;
  border: solid 3px black;
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.play__text {
  margin-left: 10px;
  font-weight: 900;
}
.like {
  width: 50px;
  height: 50px;
  background-color: white;
  border: solid 3px black;
  border-radius: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0px 10px;
}
.plus {
  width: 50px;
  height: 50px;
  background-color: white;
  border: solid 3px black;
  border-radius: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.colormain {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  width: 270px;
  height: 400px;
}

.colormain__one-1 {
  background-color: red;
  width: 50px;
  height: 50px;
  border-radius: 15px;
  border: solid 2px black;
  float: left;
  margin-right: 10px;
}

.colormain__two-1 {
  background-color: green;
  width: 50px;
  height: 50px;
  border-radius: 15px;
  border: solid 2px black;
  float: left;
  margin-right: 10px;
}

.colormain__three-1 {
  background-color: blue;
  width: 50px;
  height: 50px;
  border-radius: 15px;
  border: solid 2px black;
  float: left;
  margin-right: 10px;
}

.colormain__four-1 {
  background-color: black;
  width: 50px;
  height: 50px;
  border-radius: 15px;
  border: solid 2px black;
  float: left;
  margin-right: 10px;
}

.colormain__one-1 + span {
  font-size: 20px;
  font-weight: 900;
}
.colormain__one-1 + span + span {
  font-size: 15px;
  font-weight: 500;
}
.colormain__two-1 + span {
  font-size: 20px;
  font-weight: 900;
}
.colormain__two-1 + span + span {
  font-size: 15px;
  font-weight: 500;
}

.colormain__three-1 + span {
  font-size: 20px;
  font-weight: 900;
}
.colormain__three-1 + span + span {
  font-size: 15px;
  font-weight: 500;
}
.colormain__four-1 + span {
  font-size: 20px;
  font-weight: 900;
}
.colormain__four-1 + span + span {
